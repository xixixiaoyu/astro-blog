---
import BaseLayout from '../layouts/BaseLayout.astro';

// 获取所有博客文章
const posts = await Astro.glob('./posts/*.md');
---

<BaseLayout title="博客文章">
  <h1 class="text-3xl font-bold mb-8">所有文章</h1>
  <div class="space-y-8">
    {posts.map(post => (
      <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
        <a href={post.url} class="block">
          <h2 class="text-2xl font-bold hover:text-blue-500 transition-colors">
            {post.frontmatter.title}
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mt-2">
            {post.frontmatter.description}
          </p>
          <time class="text-sm text-gray-500 dark:text-gray-500 mt-4 block">
            {new Date(post.frontmatter.date).toLocaleDateString()}
          </time>
        </a>
      </article>
    ))}
  </div>
</BaseLayout> 